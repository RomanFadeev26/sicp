    (let ((new-value (logical-not (get-signal input))))
      (after-delay inverter-delay
                   (lambda ()
                     (set-signal! output new-value)))))
  (add-action! input inverter-input)
  'ok)

(define (logical-not s)
  (cond ((= s 0) 1)
        ((= s 1) 0)
        (else (error "Неправильный сигнал -- LOGICAL-NOT" s))))

(define (logical-and s1 s2)
  (cond ((= s1 0) 0)
        ((= s2 0) 0)
        ((and (= s1 1) (= s2 1)) 1)
        (else (error "Неправильный сигнал -- LOGICAL-AND" s1 s2))))

(define (logical-or s1 s2)
  (cond ((= s1 1) 1)
        ((= s2 1) 1)
        ((and (= s1 0) (= s2 0)) 0)
        (else (error "Неправильный сигнал -- LOGICAL-OR" s1 s2))))

